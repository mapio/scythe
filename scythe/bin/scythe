#!/bin/bash

echo1() { echo -e "\033[34m*** $@...\033[0m"; }
echo2() { echo -e "\033[31m** $@...\033[0m"; }
echo3() { echo -e "\033[32m* $@...\033[0m"; }

if [ -z "$SCYTHE_HOME" ]; then
	echo "scythe: please set the required environment variables sourcing setenv.sh" 2>&1
	exit 1
fi

command="$1"
if [ -z "$command" ]; then
	echo "scythe: available commands: $(ls -1 "$SCYTHE_HOME/bin/scythe-"* | sed 's/.*\/bin\/scythe-\(.*\)/\1/g' | paste -s -d' ' -)" 2>&1
	exit 1
fi
SCYTHE_CMD="$SCYTHE_HOME/bin/scythe-$command"
if [ ! -r "$SCYTHE_CMD" ]; then
	echo "scythe: command '$command' not found!" >&2
	exit 1
fi
shift
if [ -z "$SCYTHE_EXAM_ID" ]; then
	SCYTHE_EXAM_ID="$1"
fi
if  [[ ! "$SCYTHE_EXAM_ID" =~ ^[_[:alpha:][:digit:]]*$ ]]; then
		echo "scythe: exam id '$SCYTHE_EXAM_ID' must contain alphanumeric and underscore chars only !" >&2
		exit 1
fi

export SCYTHE_EXAM_ID
shift
source "$SCYTHE_HOME/confs.sh"


if [ ${SCYTHE_USE_SANDBOX+x} ] && [ -z "$SCYTHE_USE_SANDBOX" ]; then
	echo "scythe: now docker is required for scythe to work, remove empty SCYTHE_USE_SANDBOX from your confs"
	exit 1
fi

case "$command" in
	upgrade|versions)
	;;
	edit|prepare)
		if [ ! -r "$EXERCISES" ]; then
		    echo "scythe: exercises list '$EXERCISES' not readable!" >&2
		    exit 1
		 fi
	;;
	get|logtail|push|start|status|stop)
		if [ ! -r "$TM_SETTINGS_SERVER" ]; then
			echo "scythe: configuration '$TM_SETTINGS_SERVER' not readable!" >&2
			exit 1
		fi
	;;
	test|view)
		if [ ! -r "$TM_SETTINGS_LOCAL" ]; then
			echo "scythe: configuration '$TM_SETTINGS_LOCAL' not readable!" >&2
			exit 1
		fi
esac

source "$SCYTHE_CMD" "$@"
