#!/bin/bash -e

echo1() { echo -e "\033[34m*** $@...\033[0m"; }
echo2() { echo -e "\033[31m** $@...\033[0m"; }
echo3() { echo -e "\033[32m* $@...\033[0m"; }

if [ -z "$SCYTHE_HOME" ]; then
	echo "scythe: please set the required environment variables sourcing setenv.sh" 2>&1
	exit 1
fi

command="$1"
if [ -z "$command" ]; then
	echo "scythe: available commands: $(ls -1 "$SCYTHE_HOME/bin/scythe-"* | sed 's/.*\/bin\/scythe-\(.*\)/\1/g' | paste -s -d' ' -)" 2>&1
	exit 1
fi
SCYTHE_CMD="$SCYTHE_HOME/bin/scythe-$command"
if [ ! -r "$SCYTHE_CMD" ]; then
	echo "scythe: command '$command' not found!" >&2
	exit 1
fi
shift || true
if [ -z "$SCYTHE_SESSION_ID" ]; then
	SCYTHE_SESSION_ID="$1"
fi
if  [[ ! "$SCYTHE_SESSION_ID" =~ ^[_[:alpha:][:digit:]]*$ ]]; then
		echo "scythe: session id '$SCYTHE_SESSION_ID' must contain alphanumeric and underscore chars only !" >&2
		exit 1
fi

export SCYTHE_SESSION_ID
shift || true
source "$SCYTHE_HOME/confs.sh"

if [ ${SCYTHE_USE_SANDBOX+x} ]; then
	echo "scythe: now docker is no more required for scythe to work, please remove empty SCYTHE_USE_SANDBOX from your confs"
	exit 1
fi

if [ -z "$SCYTHE_TESTER_ID" ]; then
	echo "scythe: SCYTHE_TEACHER_ID is now deprecated, please edit your confs renaming such var in SCYTHE_TESTER_ID"
	exit 1
fi

case "$command" in
	upgrade|versions)
	;;
	edit|prepare)
		if [ ! -r "$EXERCISES" ]; then
		    echo "scythe: exercises list '$EXERCISES' not readable!" >&2
		    exit 1
		 fi
	;;
	auth|backup|logtail|push|start|status|stop)
		if [ ! -r "$TM_SETTINGS" ]; then
			echo "scythe: configuration '$TM_SETTINGS' not readable!" >&2
			exit 1
		fi
	;;
esac

source "$SCYTHE_CMD" "$@"
